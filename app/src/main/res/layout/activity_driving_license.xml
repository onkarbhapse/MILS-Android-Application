<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driving_license"
    android:padding="5dp"
    android:scrollbarSize="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/personal_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Driving License Information"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            />

        <ImageView
            android:id="@+id/driver_license_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/personal_info_text"
            android:layout_marginTop="50dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border"
            android:src="@drawable/image_black_24dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driver_license_image"
            android:layout_marginTop="0dp"
            android:text="Note: Please,Upload Driving License image"
            android:textSize="12dp"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/driving_license_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driver_license_image"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Driving License Number"
            android:padding="10dp"
            android:inputType="textMultiLine"
            />

        <TextView
            android:id="@+id/validity_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driving_license_number"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="License Validity Upto:-"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"/>

        <Button
            android:id="@+id/validity_date_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/validity_date_text"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:padding="10dp"
            android:text="---select date---"
            />





        <TextView
            android:id="@+id/bod_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/validity_date_Button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Birth Date:-"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"/>

        <Button
            android:id="@+id/dob_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bod_text"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:padding="10dp"
            android:text="---select date of birth---"
            />


        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob_Button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="35dp"
            android:padding="10dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="20dp"/>

    </RelativeLayout>

</ScrollView>